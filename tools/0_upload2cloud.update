#!/bin/sh

## hyphop ##

# just run as
#	./tools/*

case "$PWD" in
    *upload2cloud)
    ;;
    *)
    echo "[e] run only as ./tools/*" >&2
    exit 0
esac


d="."
d="dl"

echo "[i] UPDATE" >&2

for t in			\
	upload2cloud		\
	upload2cloud-yandex	\
	upload2cloud-4shared	\
	upload2cloud-cloudme	\

do

echo "[i] update $d / $t" >&2
[ -e $d/$t ] || \
    ln $d/upload2cloud $d/$t
$d/$t --help $d/$t.help.md

done

./tools/*_push