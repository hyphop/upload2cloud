#!/bin/sh

## hyphop ##

# just run as
#	./tools/*

P=upload2cloud

case "$PWD" in
    *$P)
    ;;
    *)
    echo "[e] run only as ./tools/*" >&2
    exit 0
esac


d="."
d="dl"

echo "[i] UPDATE" >&2

for t in			\
	$P		\
	$P-yandex	\
	$P-4shared	\
	$P-cloudme	\
	$P-box.com	\
	
do

echo "[i] update $d / $t" >&2
#[ -e $d/$t ] || \
[ "$P" != "$t" ] && \
    ln -f $d/upload2cloud $d/$t
$d/$t --help > $d/$t.help.md

done

./tools/*_push